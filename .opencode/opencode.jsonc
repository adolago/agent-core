{
  "$schema": "https://opencode.ai/config.json",
  "model": "cerebras/qwen-3-235b-a22b-instruct-2507",
  "small_model": "cerebras/gpt-oss-120b",
  "default_agent": "zee",
  "instructions": ["STYLE_GUIDE.md"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
