{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "zee",
  "model": "nebius/zai-org/glm-4.5-air",
  "small_model": "nebius/zai-org/glm-4.5-air",
  "instructions": ["STYLE_GUIDE.md"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "memory": {
      "type": "local",
      "enabled": true
    },
    "calendar": {
      "type": "local",
      "enabled": true
    },
    "portfolio": {
      "type": "local",
      "enabled": true
    }
  },
  "memory": {
    "required": true,
    "qdrant": {
      "url": "http://localhost:6333",
      "collection": "personas_memory"
    },
    "embedding": {
      "profile": "nebius/qwen3-embedding-8b",
      "dimensions": 4096,
      "baseUrl": "https://api.tokenfactory.nebius.com/v1",
      "apiKey": "{env:NEBIUS_API_KEY}"
    }
  },
  "tiara": {
    "qdrant": {
      "url": "http://localhost:6333",
      "stateCollection": "personas_state",
      "memoryCollection": "personas_memory",
      "embeddingDimension": 4096
    }
  },
  "zee": {
    "splitwise": {
      "enabled": true,
      "token": "{env:SPLITWISE_TOKEN}"
    }
  },
  "tools": {
    "github-triage": false,
    "github-pr-search": false
  },
  "agent": {
    "zee": {
      "description": "Personal assistant for life admin, memory, messaging, and calendar",
      "mode": "primary",
      "color": "#5c9cf5"
    },
    "stanley": {
      "description": "Investing and financial research assistant",
      "mode": "primary",
      "color": "#f5a742"
    },
    "johny": {
      "description": "Study assistant for learning and knowledge graphs",
      "mode": "primary",
      "color": "#7fd88c"
    },
    "title": {
      "model": "nebius/zai-org/glm-4.5-air",
      "temperature": 0.5,
      "hidden": true
    },
    "compaction": {
      "model": "nebius/zai-org/glm-4.5-air",
      "temperature": 0.3,
      "hidden": true
    }
  }
}
