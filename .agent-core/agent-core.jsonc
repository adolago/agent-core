{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "zee",
  "instructions": ["STYLE_GUIDE.md"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "personas-memory": {
      "type": "local",
      "command": ["bun", "run", "~/.local/src/agent-core/src/mcp/servers/memory.ts"],
      "enabled": true
    },
    "personas-calendar": {
      "type": "local",
      "command": ["bun", "run", "~/.local/src/agent-core/src/mcp/servers/calendar.ts"],
      "enabled": true
    },
    "personas-portfolio": {
      "type": "local",
      "command": ["bun", "run", "~/.local/src/agent-core/src/mcp/servers/portfolio.ts"],
      "enabled": true
    }
  },
  "tools": {
    "github-triage": false,
    "github-pr-search": false
  },
  "agent": {
    "zee": {
      "description": "Personal assistant for life admin, memory, messaging, and calendar",
      "mode": "primary",
      "color": "#5c9cf5"
    },
    "stanley": {
      "description": "Investing and financial research assistant",
      "mode": "primary",
      "color": "#f5a742"
    },
    "johny": {
      "description": "Study assistant for learning and knowledge graphs",
      "mode": "primary",
      "color": "#7fd88c"
    },
    "title": {
      "temperature": 0.5,
      "hidden": true
    },
    "compaction": {
      "temperature": 0.3,
      "hidden": true
    }
  }
}
