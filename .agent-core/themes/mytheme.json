{
  "$schema": "https://opencode.ai/theme.json",
  "defs": {
    "matteBg": "#0a0a0a",
    "mattePanel": "#141414",
    "matteBorder": "#333333",
    "matteText": "#eeeeee",
    "matteMuted": "#808080",
    
    "johnyRed": "#9E4D42",
    "johnyAccent": "#E87D6E",
    
    "stanleyGreen": "#458A5C",
    "stanleyAccent": "#78E89C",
    
    "zeeBlue": "#3F5E99",
    "zeeAccent": "#6995E8",
    
    "gold": "#EBCB8B"
  },
  "theme": {
    "primary": { "dark": "zeeBlue", "light": "zeeBlue" },
    "secondary": { "dark": "stanleyGreen", "light": "stanleyGreen" },
    "accent": { "dark": "johnyAccent", "light": "johnyAccent" },
    
    "error": { "dark": "johnyRed", "light": "johnyRed" },
    "warning": { "dark": "gold", "light": "gold" },
    "success": { "dark": "stanleyGreen", "light": "stanleyGreen" },
    "info": { "dark": "zeeBlue", "light": "zeeBlue" },
    
    "text": { "dark": "matteText", "light": "#1a1a1a" },
    "textMuted": { "dark": "matteMuted", "light": "#666666" },
    
    "background": { "dark": "matteBg", "light": "#ffffff" },
    "backgroundPanel": { "dark": "mattePanel", "light": "#f5f5f5" },
    "backgroundElement": { "dark": "#3B4252", "light": "#eeeeee" },
    "backgroundMenu": { "dark": "mattePanel", "light": "#ffffff" },
    
    "border": { "dark": "matteBorder", "light": "#e0e0e0" },
    "borderActive": { "dark": "zeeAccent", "light": "zeeBlue" },
    "borderSubtle": { "dark": "#222222", "light": "#f0f0f0" },
    
    "diffAdded": { "dark": "stanleyGreen", "light": "stanleyGreen" },
    "diffRemoved": { "dark": "johnyRed", "light": "johnyRed" },
    "diffContext": { "dark": "matteMuted", "light": "#999999" },
    
    "markdownHeading": { "dark": "zeeAccent", "light": "zeeBlue" },
    "markdownLink": { "dark": "stanleyAccent", "light": "stanleyGreen" },
    "markdownLinkText": { "dark": "stanleyAccent", "light": "stanleyGreen" },
    "markdownCode": { "dark": "johnyAccent", "light": "johnyRed" },
    "markdownStrong": { "dark": "zeeAccent", "light": "zeeBlue" },
    
    "syntaxKeyword": { "dark": "zeeAccent", "light": "zeeBlue" },
    "syntaxFunction": { "dark": "zeeBlue", "light": "zeeBlue" },
    "syntaxString": { "dark": "stanleyAccent", "light": "stanleyGreen" },
    "syntaxVariable": { "dark": "johnyAccent", "light": "johnyRed" },
    "syntaxComment": { "dark": "matteMuted", "light": "#999999" },
    "syntaxType": { "dark": "gold", "light": "gold" }
  }
}