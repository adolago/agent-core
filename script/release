#!/usr/bin/env bash

set -euo pipefail

VERSION_ARG=${1:-}
if [ -z "$VERSION_ARG" ]; then
  VERSION_ARG=$(node -p "require('./packages/agent-core/package.json').version")
fi

if [ -z "$VERSION_ARG" ]; then
  echo "release: version is required"
  exit 1
fi

gh workflow run publish.yml -f version="$VERSION_ARG"
