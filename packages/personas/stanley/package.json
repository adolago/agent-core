{
  "name": "@personas/stanley",
  "version": "0.1.0",
  "description": "Stanley - Financial research and market analysis assistant",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "python3 -m venv .venv && .venv/bin/pip install --upgrade pip && .venv/bin/pip install -e .[dev]",
    "setup:full": "python3 -m venv .venv && .venv/bin/pip install --upgrade pip && .venv/bin/pip install -e .[full]",
    "setup:light": "python3 -m venv .venv && .venv/bin/pip install --upgrade pip && .venv/bin/pip install -e .[light]",
    "dev": ".venv/bin/python scripts/stanley_cli.py",
    "cli": ".venv/bin/stanley",
    "test": ".venv/bin/pytest tests/ -v",
    "test:cov": ".venv/bin/pytest tests/ -v --cov=src/stanley --cov-report=term-missing",
    "lint": ".venv/bin/ruff check src/",
    "lint:fix": ".venv/bin/ruff check --fix src/",
    "typecheck": ".venv/bin/mypy src/stanley",
    "format": ".venv/bin/ruff format src/ tests/",
    "clean": "rm -rf .venv dist *.egg-info src/*.egg-info .pytest_cache .mypy_cache .ruff_cache"
  },
  "keywords": [
    "finance",
    "trading",
    "market-data",
    "research",
    "backtesting"
  ],
  "author": "Agent Core Team",
  "license": "MIT"
}
